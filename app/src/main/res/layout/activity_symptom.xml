<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/borders"
    tools:context=".Symptom">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sym"
        android:layout_marginTop="110dp"
        android:text="SYMPTOMS"
        android:textSize="40sp"
        android:textColor="#443F3F"
        android:layout_marginLeft="40dp"
        />

    <EditText
        android:id="@+id/symp1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/sym"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="110dp"
        android:layout_marginRight="100dp"
        android:textAlignment="center"
        android:background="@drawable/round"
        android:hint="  *Symptom 1"
        android:textColor="#000"
        android:textColorHint="#252222" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/symp2"
        android:layout_below="@+id/symp1"
        android:layout_marginTop="35dp"
        android:textAlignment="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/round"
        android:hint="   *Symptom 2"
        android:textColorHint="#252222"
        android:textColor="#000"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/symp3"
        android:layout_below="@+id/symp2"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="40dp"
        android:textAlignment="center"
        android:layout_marginRight="100dp"
        android:background="@drawable/round"
        android:textColorHint="#252222"
        android:textColor="#000"
        android:hint="   Symptom 3"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/symp4"
        android:layout_below="@+id/symp3"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/round"
        android:textColorHint="#252222"
        android:textAlignment="center"
        android:textColor="#000"
        android:hint="   Symptom 4"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/symp5"
        android:layout_below="@+id/symp4"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/round"
        android:textColorHint="#252222"
        android:textAlignment="center"
        android:textColor="#000"
        android:hint="   Symptom 5"
        />


    <Button
        android:id="@+id/next1"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_below="@+id/symp5"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="90dp"
        android:background="#524F4F"
        android:gravity="center_horizontal"
        android:text="Next"
        android:textColor="#ffff"
        android:paddingTop="9dp"
        android:onClick="getresult"
        />


</RelativeLayout>